<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse5324.projecthotel">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DashBoardActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainAppScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--MANAGER-->
        <activity android:name=".ManagerScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManagerProfile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewReservations"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchRoom"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AvailableRoom"
            android:theme="@style/AppTheme" />

        <!--ADMIN-->
        <activity android:name=".AdminScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchUser"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AdminProfile"
            android:theme="@style/AppTheme" />

        <!--GUEST-->
        <activity android:name=".GuestScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuestProfile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RequestReservations"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ReservationSummary"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PendingReservations"
            android:theme="@style/AppTheme" />

    </application>

</manifest>